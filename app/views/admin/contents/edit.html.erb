<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h5 class="bg-light col-2 text-center my-5 text-nowrap">管理コンテンツ編集</h5>
    </div>
  </div>
  <div class="row justify-content-around">
    <% if @content.errors.any? %>
    <div>
      <h2><%= @content.errors.count %> 件のエラーがあります。</h2>
      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    <div class="col-sm-12 p-0">
      <%= form_with model: @content, url: content_path(@content), method: :patch do |f| %>
        <div class="form-group row mb-3">
          <div class="offset-md-1 col-md-2 col-form-label">
            <%= f.label :image, "コンテンツ画像",class: "font-weight-bold text-center text-nowrap" %>
          </div>
          <div class="offset-md-1 col-md-4 col-form">
            <%= f.file_field :image, class: "label", accept: "image/*" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <div class="offset-md-1 col-md-2 col-form-label">
            <%= f.label :title, "コンテンツタイトル(正式名称)",class: "font-weight-bold text-nowrap" %>
          </div>
          <div class="offset-md-1 col-md-4 col-form">
            <%= f.text_field :title, autofocus: true, autocomplete: "title", placeholder: "推し助物語", class: "form-control border border-secondary" %>
          </div>
        </div>

        <div class="form-group row mb-3">
          <div class="offset-md-1 col-md-2 col-form-label">
            <%= f.label :caption, "コンテンツ説明",class: "font-weight-bold text-nowrap" %>
          </div>
          <div class="offset-md-1 col-md-4 col-form">
            <%= f.text_area :caption, autofocus: true, autocomplete: "caption", placeholder: "ここに説明文を記述します", class: "form-control form-control-lg border border-secondary", rows: "3" %>
          </div>
        </div>

        <div class="form-group row mb-5">
          <div class="offset-md-1 col-md-2 col-form-label">
            <%= f.label :public_link, "公式ホームページリンク",class: "font-weight-bold text-nowrap" %>
          </div>
          <div class="offset-md-1 col-md-4 col-form">
            <%= f.text_field :public_link, autofocus: true, autocomplete: "public_link", placeholder: "https://oshisuke-monogatari.com", class: "form-control border border-secondary" %>
          </div>
        </div>

        <div class="form-group row mb-5">
          <div class="offset-md-1 col-md-2 col-form-label">
            <%= f.label :status, "表示ステータス管理",class: "font-weight-bold text-nowrap" %>
          </div>
          <div class="offset-md-1 col-md-4 col-form custom-radio custom-control-inline">
            <%= f.radio_button :status, true %>
            <%= f.label :status, "有効", value: true, class: "text-nowrap mr-5" %>

            <%= f.radio_button :status, false %>
            <%= f.label :status, "非表示", value: false, class: "text-nowrap" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="actions offset-md-4 col-md-4 d-grid gap-2 col-form">
            <%= f.submit "変更を保存", class: "btn btn-success " %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>