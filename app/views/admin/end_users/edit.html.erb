<div>
  <%= flash[:notice][:alert] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h5 class="d-inline-block bg-light col-sm-3 px-auto my-4 ">管理者ログイン</h5>
    </div>
  </div>
  <div class="row justify-content-around">
    <% if @end_user.errors.any? %>
    <div>
      <h2><%= pluralize(@end_user.errors.count, "error") %> 件のエラーがあります。</h2>
      <ul>
      <% @end_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  <div class="row justify-content-around">
    <div class="col-sm-12 col-md-10 col-lg-8 mx-auto p-sm-0">
      <%= form_with model: @end_user, url: admin_end_user_path(@end_user), method: :patch do |f| %>
        <div class="form-group row mb-2">
          <div class="d-flex flex-row mb-2">
            <label class="col-md-3">会員ID</label>
            <p class="offset-2 col-md-7 text-start"><%= @end_user.id %></p>
          </div>
        </div>

        <div class="form-group row mb-2">
          <div class="col-md-3 col-form-label">
            <%= f.label :email do %>メールアドレス<% end %>
          </div>
          <div class="col-md-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control border border-secondary rounded" %>
          </div>
        </div>

        <div class="form-group row mb-5">
          <div class="col-md-3 col-form-label">
            <%= f.label :password do %>パスワード<% end %>
          </div>
          <div class="col-md-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control border border-secondary rounded" %>
          </div>
        </div>
        <div class="form-group row mb-5">
          <div class="col-md-3 col-form-label">
            <%= f.label :is_deleted, class: "font-weight-bold text-nowrap" do %>会員ステータス<% end %>
          </div>
          <div class="col-md-3 ">
            <div class="custom-control custom-radio custom-control-inline">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", value: true, class: "text-nowrap mr-5" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", value: false, class: "text-nowrap" %>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <div class="actions offset-3 col-md-3 col-form d-grid gap-2">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>