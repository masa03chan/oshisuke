<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="bg-light col-2 text-center my-5 text-nowrap"><%= @end_user.name %>さんの会員詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="d-flex flex-row mb-2">
        <label class="col-md-3">会員ID</label>
        <p class="offset-2 col-md-7 text-start"><%= @end_user.id %></p>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-md-3">氏名</label>
        <p class="offset-2 col-md-7 text-start"><%= @end_user.name %></p>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-md-3">プロフィール文</label>
        <p class="offset-2 col-md-7 text-start"><%= @end_user.caption %></p>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-md-3">メールアドレス</label>
        <p class="offset-2 col-md-7 text-start"><%= @end_user.email %></p>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-md-3">会員ステータス</label>
        <div class="offset-2 col-md-7 text-start">
          <% if @end_user.is_deleted? %>
            <P class="font-weight-bold", style="color-grey">退会</P>
          <% else %>
            <P class="font-weight-bold", style="color:lightgreen">有効</P>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 d-grid gap-2 d-md-flex justify-content-md-center mb-2">
      <%= link_to "編集する", edit_admin_end_user_path(@end_user), class: "btn btn-success" %>
    </div>
    <div class="col-md-4 d-grid gap-2 d-md-flex justify-content-md-center mb-2">
      <%= link_to "コンテンツ一覧を見る", admin_contents_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
