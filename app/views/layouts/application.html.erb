              <div class="col-md-1"></div>
              <div class="col-md-5">
                <!%= render "public/shared/content_search" %>
              </div>
            <!% else %>
              <div class="col-md-5">

              </div>
            <!% end %>
          </div>-->
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <div class="mt-5 bg-light vh-100">
        <div class="row mx-auto ">
          <P class="mx-auto mt-2 text-center">Copyright ©2023 Masami Yamaguchi All Rights Reserved.</P>
        </div>
      </div>
    </footer>
  </body>
</html>