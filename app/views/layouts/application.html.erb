          <%= link_to "推しスケ", root_path, class: "navbar-brand col-sm-3" %>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav me-auto d-flex justify-content-end col-md">
              <% if user_signed_in? %>
                <%= render "public/shared/sign_in_header" %>
                <%= render "public/shared/content_search" %>
              <% elsif admin_signed_in? %>
                <%= render "admin/shared/sign_in_header" %>
                <%= render "admin/shared/search" %>
              <% else %>
                <%= render "public/shared/sign_out_header" %>
                <%= render "public/shared/content_search" %>
              <% end %>
            </ul>
          </div>
