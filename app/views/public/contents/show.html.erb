<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light col-2 text-center my-5 text-nowrap">コンテンツ詳細</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-4 img-fluid d-flex mh-100", style="width: 200px; height: 200px;" >
      <%= image_tag @content.image, class: "image" %>
    </div>
    <div class="col-sm-8">
      <div class="d-flex flex-row mb-2">
        <label class="col-sm-3">商品名</label>
        <div class="col-sm-5"><%= @item.name %></div>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-sm-3">商品説明</label>
        <div class="col-sm-5"><%= @item.introduction %></div></br>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-sm-3">ジャンル</label>
        <div class="col-sm-5"><%= @item.genre.name %></div>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-sm-3">税込価格</br>(税抜価格)</label>
        <div class="col-sm-5 flex-row">
          <p class="font-weight-bold">
            <%= (@item.price*1.1).floor.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>)円
          </p>
        </div>
      </div>

      <div class="d-flex flex-row mb-2">
        <label class="col-sm-3">販売ステータス</label>
        <div class="col-sm-5">
          <% if @item.is_active? %>
            <P class="font-weight-bold", style="color:lightgreen">販売中</P>
          <% else %>
            <P class="font-weight-bold", style="color-grey">販売停止中</P>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-sm-2 text-center">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-block" %>
    </div>
  </div>
</div>