<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row d-flex flex-row">
    <div class="col-md-9 mx-auto justify-content-sm-start justify-content-center">
      <h5 class="d-inline-block col-md-2 text-center my-5 text-nowrap">コンテンツ一覧<span>(全<%= @quantity %>件)</span></h5>
      <div class="row mx-auto">
        <% if @contents.present? %>
          <% @contents.each do |content| %>
            <div class="d-flex flex-column item-box mr-md-1 mr-0", style="width: 170px;">
              <%= link_to content_path(content.id) do %>
                <%= image_tag content.get_image(370, 100) %>
              <% end %>
              <%= content.name %></br>
              <%= content.content_followings.count.to_s(:delimited) %>
            </div>
          <% end %>
        <% else %>
          <p class="text-center">コンテンツが見つかりませんでした。コンテンツを登録してみましょう！</p>
          <div class="text-center">
            <%= link_to "コンテンツを登録する", new_content_path, class: "col-md-5 btn btn-primary text-nowrap" %>
          </div>
        <% end %>
      </div>
      <%= paginate @contents %>
    </div>
  </div>
</div>