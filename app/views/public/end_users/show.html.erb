<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="bg-light col-2 text-center my-5 text-nowrap">マイページ</h5>
    </div>
  </div>
  <div class="row text-center mb-2">
    <div class="col-md-10 mx-auto d-flex flex-row">
      <div class="d-flex flex-column mb-2 col-md-3">
        <%= image_tag @end_user.get_profile_image(100, 100), class: "img-thumbnail" %>
        <h4 class="col-md-4"><%= @end_user.name %></h4>
      </div>
      <div class="d-flex col-md-7 mb-2 ms-2">
        <p class="col-md text-break text-start"><%= @end_user.caption %></p>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-4 d-grid gap-2 d-md-block d-md-flex justify-content-md-center">
      <div class= "btn btn-info"disabled>マイカレンダー(今後実装予定)</div>
    </div>
    <div class="col-md-3 d-grid gap-2 d-md-block d-md-flex justify-content-md-center">
      <%= link_to "詳細を編集する", edit_public_end_user_path(current_end_user), class: "btn btn-success" %>
    </div>
  </div>
</div>